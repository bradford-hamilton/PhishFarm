doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Profile
    // Normalize
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/4.1.1/normalize.min.css')
    // Bootstrap
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.6/spacelab/bootstrap.min.css')
    link(href='https://fonts.googleapis.com/css?family=Playfair+Display', rel='stylesheet', type='text/css')
    link(rel='stylesheet', type='text/css', href='style-profile.css')
  body
    // Navigation Bar
    nav.navbar.navbar-default
      .container-fluid
        .row
          .col-md-8
            a.navbar-brand(href='/profile') Profile
            a.navbar-brand.text-primary(href='/news') News
            a.navbar-brand(href='/chat') Chat
          .col-md-4.text-right
            a.btn.btn-default.navbar-btn(href='/logout' role='button') Log out
    .container-fluid
      .row
        .col-lg-2.col-offset-6
          h1#profile.text-center Profile        
    #left-nav.list-group.col-lg-2.col-md-3
      button#recent.list-group-item Most Recent Show
      button#tiph.list-group-item Today in Phish History
      button#upcoming-shows.list-group-item Upcoming shows
      button#reviews.list-group-item How've they been playing?
    .contatiner
      .row.col-lg-9.col-md-8
        ul.col-lg-12.col-md-12(style='list-style:none;')
          li.text-center
    // jQuery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='recent-show-ajax.js')
    script(src='tiph-ajax.js')
    script(src='upcoming-shows-ajax.js')
    script(src='reviews-ajax.js')
