doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title PhishFarm-Chat
    // Normalize
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/4.1.1/normalize.min.css')
    // Bootstrap
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.6/spacelab/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='chat-style.css')
    link(rel='icon', type='image/png', href='donuts.png')
  body
    // Navigation Bar
    nav.navbar.navbar-default
      .col-md-8
        a.btn.btn-info.navbar-btn(href='/profile') Profile
        a.btn.btn-info.navbar-btn(href='/news') News
      .col-md-4.text-right
        a.btn.btn-default.navbar-btn(href='/logout') Log out
    #nickname-wrap.container
      .jumbotron.col-lg-6.col-md-6.col-lg-offset-3.col-md-offset-4
        h5#nickname-error
        form#set-nickname
          label#pick-nickname-text.control-label(for='nickname') Please set your username for the chat
          input#nickname.form-control
          input.btn.btn-success.pull-right(type='submit')
    #content-wrap.container
      #chat-wrap.row.col-lg-8.col-md-8
        #chat
        // send messages form/input
        form#send-message
          label.control-label(for='message') Send Messages Below!
          input#message.form-control
          br
          input.btn.btn-success.pull-right(type='submit')
      .jumbotron.pull-right.chat-jumbo
        h3 Users Online: 
        h5#users
    // Javascript    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='chat-script.js')
